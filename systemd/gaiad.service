[Unit]
Description=Gaia Cosmos Node
Documentation=https://hub.cosmos.network
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=gaia
Group=gaia

ExecStart=/usr/local/bin/gaiad start --home /var/lib/gaia
ExecStop=/bin/kill -s SIGTERM $MAINPID

Restart=on-failure
RestartSec=10
LimitNOFILE=65535

StandardOutput=journal
StandardError=journal
SyslogIdentifier=gaiad

[Install]
WantedBy=multi-user.target
